{
  "name": "my-finance-service",
  "version": "1.0.0",
  "description": "Full-stack application with React + TypeScript frontend and Django backend",
  "scripts": {
    "dev": "docker-compose up --build",
    "prod": "docker-compose -f docker-compose.prod.yml up --build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:backend": "cd backend && python manage.py test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "react",
    "typescript",
    "django",
    "mysql",
    "docker",
    "fullstack",
    "jwt",
    "rest-api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  },
  "devDependencies": {
    "swagger-typescript-api": "^13.2.13"
  }
}
